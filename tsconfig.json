{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ES2024",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist/esm"
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "vitest.*.config.ts"
  ]
}
